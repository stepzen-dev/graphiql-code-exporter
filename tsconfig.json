{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/esm",
    "declarationDir": "./dist/types",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}